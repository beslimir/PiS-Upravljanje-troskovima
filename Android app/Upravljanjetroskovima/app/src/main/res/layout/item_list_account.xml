<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Naziv racuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_il_account_name"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_li_account_id"
        android:visibility="gone" />

    <TextView
        android:text="250,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_li_account_value"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/tv_il_account_name"
        android:layout_alignBottom="@+id/tv_il_account_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>